<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BiomartFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="134dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="77dp"
        app:srcCompat="@drawable/ic_baseline_cloud_24"
        app:tint="@color/purple_500" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="137dp"
        android:src="@drawable/ic_baseline_lock_24"
        app:srcCompat="@drawable/ic_baseline_lock_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="36dp"
        android:text="BioMart Secure"
        android:textColor="@color/purple_500"
        android:textSize="33dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="214dp"
        app:srcCompat="@drawable/ic_finger_white"
        app:tint="@color/purple_500" />

    <TextView
        android:id="@+id/auth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="437dp"
        android:text="Click to Enable Biometric Login"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/auth_btn"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="484dp"
        android:drawableLeft="@drawable/ic_finger_white"
        android:drawableTint="@color/white"
        android:text="Authenticate" />


</RelativeLayout>